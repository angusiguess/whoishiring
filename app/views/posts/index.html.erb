<h1>Listing posts</h1>

<table>
  <tr>
    <th>Company</th>
    <th>Author</th>
    <th>Content</th>
    <th>Location</th>
    <th>Intern</th>
    <th>Remote</th>
    <th>Full time</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Gmaps</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.company %></td>
    <td><%= post.author %></td>
    <td><%= post.content %></td>
    <td><%= post.location %></td>
    <td><%= post.intern %></td>
    <td><%= post.remote %></td>
    <td><%= post.full_time %></td>
    <td><%= post.latitude %></td>
    <td><%= post.longitude %></td>
    <td><%= post.gmaps %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

