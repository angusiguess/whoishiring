<div class="row-fluid">
  <div class="span12">
    <ul class="breadcrumb">
      <li><%= link_to "Jobs", posts_path %><span class="divider">/</span></li>
      <li class="active"><%= @post.pretty_position_company %></li>
    </ul>
  </div>
</div>

<% if !notice.blank? %>
<div id="notice" class="alert-message info">
  <a class="close" href="#">x</a>
  <p><strong>Something happened!</strong> <%= notice %></p>
</div>
<% end %>

<h1>
  <%= @post.pretty_position_company %>
</h1>

<p>
<% if @post.intern %>
  <span class="label label-success">Intern</span>
<% end %>
<% if @post.remote %> 
  <span class="label label-important">Remote</span>
<% end %>
<% if @post.honeb %>
  <span class="label label-info">H1B</span>
<% end %>
</p>
    <p>
      <b>Positions:</b>
      <%= @post.pretty_positions %>
    </p>
    <p>
      <b>Company:</b>
      <%= @post.company %>
    </p>
    <p>
      <b>Technologies:</b>
      <%= @post.pretty_technologies %>
     </p>
    <p>
      <b>Location:</b>
      <%= @post.location %>
    </p>
    <p>
      <b>User:</b>
      <%= link_to @post.author, "http://news.ycombinator.com/user?id=#{@post.author}" %>
    </p>
    <p>
      <b>Original Post:</b>
      <br/>
      <%= raw @post.content %>
    </p>
    <p>
      <b>Contact(s):</b>
      <ul>
      <% @post.pretty_emails.each do |email| %>
        <li><%= email %></li>
      <% end %> 
      </ul>  
    </p>
    <p>
      <b>Website(s):</b>
      <ul>
        <% @post.urls.each do |url| %>
          <li><%= link_to url, url %></li>
        <% end %>
      </ul>
    </p>
  </div>
</div>
</div>
</div>
